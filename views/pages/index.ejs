<% include ../partials/header %>

<div class="container" style="padding-top:10px">
    <div class="">
        <a href="/event/add" class="btn btn-success btn-lg">Add New Event</a>
    </div>
</div>

<br>

<div class="container">
    <div class="">
        <% if((events.length)>0) { %>
            <table class="table">
                <thead>
                    <tr>
                        <td style="width: 5%; text-align: center;">ID</td>
                        <td style="width: 25%;">Title</td>
                        <td style="width: 40%;">Description</td>
                        <td style=" width:15%;">Location</td>
                        <td style="width: 15%; text-align: center;">Action</td>
                    </tr>
                </thead>
                <tbody>
                    <% events.forEach(function(event, index){ %>
                    <tr>
                        <td style="width: 5%; text-align: center;"> <%= index+1 %> </td>
                        <td style="width: 25%;"> <%= event.title %> </td>
                        <td style="width: 40%;"> <%= event.description %> </td>
                        <td style=" width:15%;"> <%= event.location %> </td>
                        <td style="width: 15%; text-align: center;">
                            <a href="/event/edit/<%= event.id %>" class="btn btn-info">Edit</a>
                            <a href="/event/delete/<%= event.id %>" class="btn btn-danger">Delete</a>
                        </td>
                     </tr>
                    <% }); %>
                </tbody>
            </table>
        <% }else{ %>
            <p> <strong> There is no events available now. </strong> </p>
        <% } %>
    </div>
</div>

<% include ../partials/footer %>